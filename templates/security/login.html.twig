{% extends 'base.html.twig' %}

{% block title %} Shop {% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            text-align: center;
            margin-top: 70px;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px
        }

        #register_button {
            margin-left: 5px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}Login page{% endtrans %}:</h1>

        {% for message in app.flashes('notice') %}
            <div class="flash-notice">
                <span class="error text-success"> {{ message }} </span>
            </div>
        {% endfor %}

        {% if error %}
            <span class="error text-danger"> {{ error.messageKey }} </span>
        {% endif %}
        <div id="form">
            <form action="{{ path('login') }}" method="POST">

                <div class="form-group row">
                    <label for="username_input" class="col-2 col-form-label">Username</label>
                    <div class="col-10">
                        <input class="form-control" type="text" value="{{ last_username }}" placeholder="Username here..." id="username_input" name="_username">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password_input" class="col-2 col-form-label">Password</label>
                    <div class="col-10">
                        <input class="form-control" type="password" id="password_input" name="_password">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">{% trans %}Login{% endtrans %}</button>

                {#<input type="text" name="_username" value="{{ last_username }}" placeholder="Username here ...">#}
                {#<input type="password" name="_password">#}
                {#<button type="submit">{% trans %}Login{% endtrans %}</button>#}

                <a href="{{ path('register') }}" id="register_button" class="btn btn-success">{% trans %}Register{% endtrans %}</a>

            </form>
        </div>
    </div>
{% endblock %}