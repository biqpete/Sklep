{% extends 'base.html.twig' %}

{% block title %} Shop {% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            text-align: center;
            margin-top: 70px;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px
        }

        #register_button {
            margin-left: 5px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}Login page{% endtrans %}:</h1>

        {% for message in app.flashes('notice') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}

        {% if error %}
            <span class="error text-danger"> {{ error.messageKey }} </span>
        {% endif %}

        <form action="{{ path('login') }}" method="POST">

            <input type="text" name="_username" value="{{ last_username }}" placeholder="Username here ...">

            <input type="password" name="_password">

            <button type="submit">{% trans %}Login{% endtrans %}</button>

            <a href="/register" id="register_button">{% trans %}Register{% endtrans %}</a>

        </form>
    </div>
{% endblock %}