{% extends 'base.html.twig' %}

{% block title %} shop {% endblock %}

{% block body %}
    <h1> hello {{ app.user.username }}</h1>
    {% if orders %}
        <table id="orders" class="table table striped">
            <thead>
            <tr>
                <th>Order Title</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.name }}</td>
                    <td>
                        <a href="/order/{{ order.id }}" class="btn btn-dark">Show</a>
                        <a href="/order/edit/{{ order.id }}" class="btn btn-light">Edit</a>
                        <a href="#" class="btn btn-danger delete-order" data-id="{{ order.id }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No orders to display</p>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}
